{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": false, // Disable strict type-checking to avoid implicit 'any' type errors
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "types": ["node", "mocha"],
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["src/**/*.ts", "tests/**/*.ts"]
}
